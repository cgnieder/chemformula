  {
    \ooalign
      {
        \tex_hfil:D
        \c_math_toggle_token
          #1
          \chemformula_plain_minus:
        \c_math_toggle_token
        \tex_hfil:D
        \tex_cr:D
        \tex_hfil:D
        \c_math_toggle_token #1#2 \c_math_toggle_token
        \tex_hfil:D
        \tex_cr:D
      }
  }

